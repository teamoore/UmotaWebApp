                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("Beklenmedik bir hata oluştu. Hata Mesajı:" + ex.Message, severity: Severity.Error);
        }

    }

    public void YeniTalep()
    {
        navigation.NavigateTo("/" + insertPage);
    }
}
